  "license": "MIT",
  "scripts": {
    "test": "jest",
    "prod": "NODE_ENV=production ts-node-dev --respawn --watch 'src/**' --transpile-only --ignore-watch node_modules -r tsconfig-paths/register src/server.ts",
    "dev": "ts-node-dev --respawn --watch 'src/**' --transpile-only --ignore-watch node_modules -r tsconfig-paths/register src/main.ts",
    "build:app": "babel src --extensions \".js,.ts\" --out-dir dist --copy-files --no-copy-ignored",
    "stage": "prisma generate && npm run dev",
    "build": "npm run generate",
    "generate": "npm run generate:prisma",
    "generate:prisma": "prisma generate && npm run prod",
    "test:flow:products": "jest ./src/Modules/FlowRegisterProduct/test.spec.ts"
  },
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.14",
    "ts-node-dev": "^2.0.0",
    "tsc-node": "^0.0.3",
    "tsconfig-paths": "^4.1.0",
    "typescript": "^4.8.4"
  },
  "dependencies": {
    "@prisma/client": "^4.5.0",
    "@types/node": "^18.11.9",
    "axios": "^1.1.3",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "prisma": "^4.5.0"
  }
}
